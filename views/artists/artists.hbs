<section class="section">
    <div class="container">
        <h1>Moshun</h1>
        <p>
            <a href="/artists/new" class="btn btn-primary btn-lg homepage-button">Create New Artist</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#each artists}}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{imgLink}}" alt="Image of {{name}}" class="card-img-top" width="100%" height="225"
                        xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                        role="img">
                    <title>{{name}}</title>
                    <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef"
                        dy=".3em">{{name}}</text>
                    </svg>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <p><a href="/artists/{{_id}}" class="btn btn-sm btn-outline-secondary">View Artist Page</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
